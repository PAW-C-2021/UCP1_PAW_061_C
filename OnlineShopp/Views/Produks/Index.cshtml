@model IEnumerable<OnlineShopp.Models.Produk>

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Produk</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Produk")
            </th>
            <th>
                @Html.DisplayName("Quantity")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a class="text-dark" asp-action="Edit" asp-route-id="@item.IdProduk"><i class="fa fa-marker fa-lg"></i></a> |
                <a class="text-dark asp-action="Details" asp-route-id="@item.IdProduk"><i class="fas fa-list"></i></a> |
                <a class="text-dark asp-action="Delete" asp-route-id="@item.IdProduk"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
