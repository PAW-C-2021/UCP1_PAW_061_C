@model IEnumerable<OnlineShopp.Models.Login>

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Akun</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Password")
            </th>
            <th>
                @Html.DisplayName("Info")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                <a class="text-dark asp-action="Edit" asp-route-id="@item.IdLogin"><i class="fa fa-marker fa-lg"></i></a> |
                <a class="text-dark asp-action="Details" asp-route-id="@item.IdLogin"><i class="fas fa-list"></i></a> |
                <a class="text-dark asp-action="Delete" asp-route-id="@item.IdLogin"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
